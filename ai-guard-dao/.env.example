# AI Guard DAO - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# Network Configuration
# ============================================

# Local Development
RPC_URL=http://127.0.0.1:8545

# Monad Testnet (for deployment)
MONAD_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_CHAIN_ID=10001

# ============================================
# Backend Server Configuration
# ============================================

PORT=3001

# Backend wallet private key (for AI voting operations)
# Default: First Hardhat test account
BACKEND_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ============================================
# Contract Addresses
# These are populated automatically after deployment
# Or you can set them manually
# ============================================

VOTING_AGENT_ADDRESS=
AUDIT_LOGGER_ADDRESS=
DAO_GOVERNOR_ADDRESS=
MOCK_TOKEN_ADDRESS=

# ============================================
# Production Deployment (Optional)
# ============================================

# Your wallet private key for deploying to mainnet/testnet
# NEVER commit this with a real private key!
PRIVATE_KEY=

# ============================================
# API Keys (Optional - for future features)
# ============================================

# IPFS/Arweave for report storage
IPFS_API_KEY=
ARWEAVE_WALLET_PATH=

# External APIs for reputation checking
GITHUB_API_TOKEN=
TWITTER_API_KEY=
